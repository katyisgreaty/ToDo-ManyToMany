<h1>Update @Model.GetDescription()</h1>
<form action="/tasks/@Model.GetId()/updated" method="post">
    <input type="hidden" name="_method" value="PATCH">
    <label for="task-description">New task description:</label>
    <input id="task-description" name="task-description" type="text">
    <label for='completed'>Task complete?</label>
    <select class="form-control" name="completed">
        <option value=true>Completed</option>
        <option value=false>Not yet completed</option>
    </select>
    <button type="submit">Update task</button>
</form>
<p><a href="/">Back home</a></p>
<p><a href="/tasks">View all tasks</a></p>
